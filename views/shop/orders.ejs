<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../includes/head.ejs') %>
  </head>
  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <% if (orders.length >= 0) { %>
      <ul>
        <% orders.forEach(order => { %>
        <li>
          <h1>#<%= order.id %></h1>
          <ul>
            <% order.products.forEach(product => { %>
            <li><%= product.name %> <%= product.orderItem.quantity %></li>
            <% }) %>
          </ul>
        </li>
        <% }) %>
      </ul>
      <% } else { %>
      <h1>There are no orders</h1>
      <% } %>
    </main>
    <%- include('../includes/scripts.ejs') %>
  </body>
</html>
